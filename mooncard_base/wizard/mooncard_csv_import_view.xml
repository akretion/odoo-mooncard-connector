<odoo>

<record id="mooncard_csv_import_form" model="ir.ui.view">
    <field name="name">mooncard.csv.import.form</field>
    <field name="model">mooncard.csv.import</field>
    <field name="arch"  type="xml">
        <form string="Mooncard Import Wizard">
            <group name="help-import">
              <div>
                    <p>This <a href="https://app.mooncard.co/">Mooncard</a> import wizard supports 2 types of imports:</p>
                    <ul>
                        <li>CSV file import using Odoo bank statement files,</li>
                        <li>API import (supports both transaction and milage).</li>
                    </ul>
              </div>
            </group>
            <group name="import">
                <field name="mooncard_file" filename="filename" />
                <field name="filename" invisible="1"/>
            </group>
            <footer>
                <button name="mooncard_csv_import" type="object"
                    class="btn-primary" string="CSV Import"/>
                <button name="mooncard_api_import" type="object"
                    class="btn-primary" string="API Import"/>
                <button special="cancel" string="Cancel" class="btn-default"/>
            </footer>
        </form>
    </field>
</record>

<record id="mooncard_csv_import_action" model="ir.actions.act_window">
    <field name="name">Mooncard Import</field>
    <field name="res_model">mooncard.csv.import</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
</record>

<menuitem id="mooncard_csv_import_menu" action="mooncard_csv_import_action"
    parent="mooncard_menu" sequence="30"/>


</odoo>
