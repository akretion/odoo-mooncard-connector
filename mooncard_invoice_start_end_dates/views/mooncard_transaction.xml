<odoo>

<record id="mooncard_transaction_form" model="ir.ui.view">
    <field name="model">mooncard.transaction</field>
    <field name="inherit_id" ref="mooncard_invoice.mooncard_transaction_form"/>
    <field name="arch"  type="xml">
        <field name="force_invoice_date" position="after">
            <field name="start_date" attrs="{'invisible': ['|', ('transaction_type', '!=', 'presentment'), ('bank_move_only', '=', True)]}"/>
            <field name="end_date" attrs="{'invisible': ['|', ('transaction_type', '!=', 'presentment'), ('bank_move_only', '=', True)]}"/>
        </field>
    </field>
</record>

</odoo>
